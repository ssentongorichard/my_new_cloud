main
  header.heading1.heading2
    .container
      .row
        .col-lg-10.col-12.mx-auto
          h1.text-white Our Products
          strong.text-white Market at your door
    .back
  section.products.section-padding
    .container
      .row
        .col-12
          h2.mb-lg-5.mb-4 Dairy Products
        if goods.length
            each item in goods
                .col-lg-4.col-md-6.col-12
                    if item.status == "Approved" && item.productcategory == "Dairy" && item.availability == "available"
                        .products-thumb
                            img.img-fluid.products-image.img(src="/"+item.productimage, alt="Image") 
                            .products-info.d-flex.flex-wrap.align-items-center
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                small Ugx
                                | #{item.unitprice}
                            .d-flex.flex-wrap.align-items-center.w-100.mt-2
                                h6.reviews-text.mb-0.me-3 +1%
                                p.reviews-text.mb-0.ms-4 delivery
                                a.btn.btn-secondary.btn-block(href='/produce/order/'+item._id) order
                    else if item.status == "Approved" && item.productcategory == "Dairy" && item.availability == "booked"
                        .products-thumb
                            img.img-fluid.products-image.img(src="/"+item.productimage, alt="Image") 
                            .products-info.d-flex.flex-wrap.align-items-center
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                small Ugx
                                | #{item.unitprice}
                            .d-flex.flex-wrap.align-items-center.w-100.mt-2
                                h6.reviews-text.mb-0.me-3 booked
                                p.reviews-text.mb-0.ms-4 delivery
                    else if item.status == "Approved" && item.productcategory == "Dairy" && item.availability == "N/A"
                        .products-thumb
                            img.img-fluid.products-image.img(src="/"+item.productimage, alt="Image" ) 
                            .products-info.d-flex.flex-wrap.align-items-center
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                small Ugx
                                | #{item.unitprice}
