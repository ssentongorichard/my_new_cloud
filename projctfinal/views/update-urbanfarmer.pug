doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  title Availability Form
  link(rel='stylesheet' href='css/login.css')
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  style.
    body {
    background-color:brown;
    }
body
  .col-sm-5.mx-auto.my-12
    .card.text-center.bg-success
      .card-header.d-inline-flex.mx-auto
            form(method="POST" action='/logout')
              button.btn.btn-style.btn-light(type='') Logout
            form(method="GET" action='/UrbanFarmerList')
              button.btn.btn-style.btn-dark(type='') Cancel
      .card-body
        h5.card-title URBAN FARMER UPDATE FORM
        form.tm-login-form(action='/Urbanfarmer/update/?id='+urbanfarmer._id name='urbanfarmerupdate' method='post')
          .form-group
            label(for='names') Names
            input#names.rounded.form-control-2(type='text', name='names', placeholder='Fullname' value=urbanfarmer.names)
          .form-group
            label(for='phone') Phone
            input#phone.rounded.form-control-2(type='text', name='phone', placeholder='Phone' value=urbanfarmer.phone)
          .form-group
            label(for='address') Address 
            input#address.rounded.form-control-2.form-float(type='text', name='address', placeholder='Address' value=urbanfarmer.address)
          .form-group
            label(for='ward') Ward
            select#ward.rounded(name='ward')
              option(value='select ward') Change Ward
              option(value='WardA' selected = urbanfarmer.ward === "WardA") Ward A
              option(value='wardB' selected = urbanfarmer.ward === "WardB") ward B
              option(value='wardC' selected = urbanfarmer.ward === "WardC") ward C
              option(value='wardD' selected = urbanfarmer.ward === "WardD") ward D
          .form-group
            label(for='activity') Activity
            select#activity.rounded(name='activity')
              option(value='select activity') Activity done 
              option(value='Dairy' selected = urbanfarmer.activity === "Dairy") Dairy
              option(value='Poultry' selected = urbanfarmer.activity === "Poultry") Poultry
              option(value='Hoticulture' selected = urbanfarmer.activity === "Hoticulture") Hoticulture
          .form-group
            p
              em press Update to save changes
      footer.row.tm-mt-big
        .col-12.font-weight-light.text-center
          p.d-inline-block.tm-bg-black.text-white.py-2.px-4
            | &copy; Massajja Urban farmers initiative. All rights reserved
      .card-footer.text-muted.mx-auto
        | market at your door

      
      
      
