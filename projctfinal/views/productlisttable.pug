body(style='background-color:#fafefa;')
#page-wrap
  h1 Products List
  div
    form(method="GET" action='/ufarmerupload')
          button.btn.btn-secondary.btn-block(type='submit') Add New Product
  table.container(style='background-color:#e3f8e6f5;')
    tr
        th Product Category 
        th Product Name
        th Product Type
        th Product 
        th More
        th Product Image Image
        th Changes
    tbody 
        if myproducts.length
            each product in myproducts
                if product.status == "Pending" && product.ward === currentUser.ward
                     tr.tds 
                            td #{product.productcategory}
                            td item name
                            td item name
                            td #{product.productname}
                            td #{product.producttype}
                            td 
                                img(src="/"+product.productimage, alt="Image" width='70px' height="70px") 
                            //- td #{moment(us
                            td
                                a.btn.btn-success.btn-block(style='height:40px; width:60px;')(href='/produce/update/'+product._id) Update
                                a.btn.btn-secondary.btn-block(style='height:40px; width:70px;')(href='/produce/approve/'+product._id) Approve
                                form(method="post" action='/produce/delete')
                                    input(type="hidden" placeholder="" name="id", value=product._id)
                                    button.btn.btn-danger.btn-block(type="submit") Delete
        div.form-row
            div.col.form-group
                a(class='button' href='/agricOfficerDash') Back

