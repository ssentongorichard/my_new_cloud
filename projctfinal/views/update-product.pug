doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  meta(http-equiv='X-UA-Compatible', content='ie=edge')
  title Availability Form
  link(rel='stylesheet' href='css/login.css')
  link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous")
  style.
    body {
    background-color:brown;
    }
body
  .col-sm-5.mx-auto.my-12
    .card.text-center.bg-success
      .card-header.d-inline-flex.mx-auto
            form(method="POST" action='/logout')
              button.btn.btn-style.btn-light(type='') Logout
            form(method="GET" action='/productlist')
              button.btn.btn-style.btn-dark(type='') Cancel
      .card-body
        h5.card-title UFARM PRODUCT UPDATE FORM
        form.tm-login-form(action='/produce/update/?id='+product._id name='productupdate' method='POST')
          .form-group
            label(for='productimage') #{product.productname}:  .
            img.rounded(src="/"+product.productimage, alt="Image" width='150px' height="150px") 
          .form-group
            label(for='')
                | Product Name:
                small  *
            input#price.rounded(type='text' name='productname' autocomplete='off' value=product.productname)
          .form-group
            label(for='')
                | Product Price:
                small  *
            input#price.rounded(type='number' name='unitprice' autocomplete='off' value=product.unitprice)
          .form-group
            label(for='') Delivery Mode:
            select.rounded(name='deliverymode')
                option(value="pickup" selected = product.deliverymode === "pickup") Pick Up
                option(value="homedelivery" selected = product.deliverymode === "homedelivery") Home Delivery
          .form-group
            label Mode of Payment:
            select.rounded(name='modeofpayment')
                option(value="cash" selected = product.modeofpayment === 'cash') Cash
                option(value="mobilemoney" selected = product.modeofpayment === 'mobilemoney') Mobile Money   
          .form-group
            button.btn.btn-dark.d-inline-block.mx-auto(type='submit') Update
          .form-group
            p
              em press Update to save changes
      footer.row.tm-mt-big
        .col-12.font-weight-light.text-center
          p.d-inline-block.tm-bg-black.text-white.py-2.px-4
            | &copy; Massajja Urban farmers initiative. All rights reserved
      .card-footer.text-muted.mx-auto
        | market at your door

      
      
      
