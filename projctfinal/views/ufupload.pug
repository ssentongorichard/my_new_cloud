doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible', content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1.0')
  title product upload form
  // CSS only
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx', crossorigin='anonymous')
  link(rel='stylesheet' type='text/css' href='css/style2.css')
.container
  #form-wrapper
    form.form-padding(method="GET" action='/dashboarduf')
              button(type='') Cancel
    form(action='/ufarmerupload', name='urbanfarmerupload' enctype='multipart/form-data' onsubmit="return uploadsvalidate(event);" method='POST' )
      div.padding  
        .row
          .padding
            input#datetoday.form-control-2.width-lg(type='date', name='datetoday', placeholder='date')
            small#datetodayerr
          .col.container2
            .width4
              label(for='productcode') Product Code: 
              input#productcode.width5(type='text', name='productcode')
              small#productcodeerr
            .width5
              label(for='productcategory') Product Category: 
              select#productcategory.width5(name='productcategory')
                option(value='')
                option(value='Dairy') Dairy
                option(value='Horticulture') Horticulture 
                option(value='Poultry') Poultry
              small#productcategoryerr
            .width4
              label(for='productname') Product Name: 
              input#productname.width5(type='text', name='productname')
              small#productnameerr
            |                             Stock Count:
            .flex
              label(for='stockcount')
              input#stockcount(type='number', name='stockcount')
              label(for='stockmeasure')
              small#stockcounterr
              select#stockmeasure.width(name='stockmeasure')
                option(value='')
                option(value='gm') gm
                option(value='Kgs') Kg
                option(value='liters') ltr
              small#stockmeasureerr
            .radio
              lable(for='producttype') Product Type:
              input#organic(type='radio', name='producttype', value='organic')
              label(for='organic') Organic
              input#noneorganic(type='radio', name='producttype', value='noneorganic')
              label(for='none-organic') None organic
              small#producttypeerr
            .width4.padding
              label(for='names') SupplierName:
              select#names.width5(name="names") 
                if currentUser
                      option(value = currentUser.names) #{currentUser.names} 
              small#nameserr
          .col.container3
            .width4
              label(for='unitprice') Price:
              input#unitprice.width5(type='number', name='unitprice')
              small#unitpriceerr
            .width5
              label(for='pytmode') Payment Mode: 
              select#pytmode.width5(name='pytmode')
                option(value='')
                option(value='cash') Cash
                option(value='mobilemoney') Mobile Money
              small#pytmodeerr
            .width5
              label(for='deliverymode') Delivery Mode: 
              select#deliverymode.width5(name='deliverymode')
                option(value='')
                option(value='pickup') Pick up
                option(value='homedelivery') Home Delivery
              small#deliverymodeerr
            .width4
              label(for='productimage') Upload Image:
              input#productimage(type='file' name='productimage' style='background-color:rgb(219, 237, 192);')
              small#productimageerr
              //- hidden customer fields
              input#customeremail.width6(type='hidden' name='customeremail' )
              small#customeremailerr
              input#customeraddress.width6(type='hidden' name='customeraddress' )
              small#customeraddresserr
              //- end of hidden fields
            .width5
              label(for='ward') Ward: 
              select#ward.width5(name='ward')
                        if currentUser
                            option(value = currentUser.ward) #{currentUser.ward}
              small#warderr
          .pad
            label(for="address") 
            select#address.width-lg(name="address") 
              if currentUser
                option(value = currentUser.address) #{currentUser.address}
            small#addresserr
      div.margin 
        .flex
          .width3
            input#frm-btn-ao(type='reset' value='Reset')
            br
          .width3.button
            input#upload-button.button(type='submit' value='Upload Product')
  script(src='/js/Validateuploads.js')
            