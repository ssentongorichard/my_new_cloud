main
  header.heading1.heading2
    .container
      .row
        .col-lg-10.col-12.mx-auto
          h1.text-white Our Products
          strong.text-white Market at your door
           
             
    .back
  div#body-gradient.products.section-padding(style='background-color:#e3e6e3;')
    .container
      .row
        //- .col-12
        h2.mb-lg-5.mb-4 
          strong
            | Market at your door 
            i.bi.bi-cart4(style='color:#74ec1e ;')
            h1.font-sty Stay home we deliver at an affordable price. 
            h1.font-sty Press oder to make your booking today
        if goods.length
            each item in goods
                .col-4.container.rounded(style='background-color:white; display:flex;')
                    if item.status == "Approved" && item.availability == "available"
                        .products-thumb(style='padding-bottom:80px;')
                            img.rounded.img-fluid.products-image.img(src="/"+item.productimage, alt="Image" width='250px' height="250px") 
                            .products-info.d-flex.flex-wrap.align-items-center(style='padding-top:1px;')
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                small Ugx
                                | #{item.unitprice}
                            .d-flex.flex-wrap.align-items-center.w-100.mt-2
                                h6.reviews-text.mb-0.me-3 +1%
                                p.reviews-text.mb-0.ms-4 delivery
                                a.btn-xsm.btn-secondary.btn-block.rounded(href='/produce/order/'+item._id) order
                    else if item.status == "Approved" && item.availability == "booked"
                        .products-thumb
                            img.rounded.img-fluid.products-image.img(src="/"+item.productimage, alt="Image" width='250px' height="250px") 
                            .products-info.d-flex.flex-wrap.align-items-center
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                del.ms-2 
                                  small Ugx
                                  | #{item.unitprice}
                            .d-flex.flex-wrap.align-items-center.w-100.mt-2
                                h6.reviews-text.mb-0.me-3 booked
                                p.reviews-text.mb-0.ms-4 delivery
                    else if item.status == "Approved" && item.availability == "N/A"
                        .products-thumb
                            img.rounded.img-fluid.products-image.img(src="/"+item.productimage, alt="Image"  width='250px' height="250px" ) 
                            .products-info.d-flex.flex-wrap.align-items-center
                            h4.mb-0 #{item.productname}
                            span.price-tag.bg-white.shadow-lg.ms-4
                                del.ms-2
                                  small Ugx
                                  | #{item.unitprice}
                            .d-flex.flex-wrap.align-items-center.w-100.mt-2
                                h6.reviews-text.mb-0.me-3 N/A
                                p.reviews-text.mb-0.ms-4 finished
